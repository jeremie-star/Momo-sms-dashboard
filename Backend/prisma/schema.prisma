generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id           Int      @id @default(autoincrement())
  txId         String?  @unique
  type         String
  amount       Int
  fee          Int?     @default(0)
  balance      Int?
  counterparty String?
  msisdn       String?
  channel      String?  // AGENT, USSD, BANK, â€¦
  timestamp    DateTime
  rawBody      String
  createdAt    DateTime @default(now())
}

