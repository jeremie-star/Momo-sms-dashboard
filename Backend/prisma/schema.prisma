generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id               Int       @id @default(autoincrement())
  txId             String?   @unique
  type             String
  amount           Int
  fee              Int?      @default(0)
  counterparty     String?   // e.g. Jane Doe, MTN Rwanda
  msisdn           String?   // phone number, optional
  channel          String?   // AGENT, USSD, BANK, etc.
  timestamp        DateTime
  rawBody          String
  createdAt        DateTime  @default(now())
}

