generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id              Int      @id @default(autoincrement())
  txId            String?  @unique
  type            String
  amount          Int
  fee             Int?
  counterparty    String?
  timestamp       DateTime
  rawBody         String
  createdAt       DateTime @default(now())
}
